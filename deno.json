{
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "deno.ns",
      "deno.unstable",
      "deno.window",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "tasks": {
    "test": "deno test -A --trace-leaks --parallel",
    "ok": "deno check && deno lint && deno fmt --check && deno publish --dry-run --allow-dirty && deno task test",
    "typos": "typos -c ./.github/workflows/typos.toml",
    "watch": "deno test -A --watch --trace-leaks"
  },
  "exclude": [
    "cov",
    "coverage",
    "**/vendor-docs/**",
    "vite-project/.vite",
    "vite-project/dist"
  ],
  "lint": {
    "rules": {
      "tags": [],
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator",
        "verbatim-module-syntax",
        "no-console",
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "proseWrap": "always",
    "exclude": ["reasoning/**"]
  },
  "workspace": ["./concat", "./crm", "./chats"],
  "imports": {
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^2.0.0-beta.2",
    "@artifact/client": "jsr:@artifact/client@^0.0.139",
    "@artifact/utils-server": "jsr:@artifact/utils-server@^0.0.27",
    "@libs/xml": "jsr:@libs/xml@^7.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/async": "jsr:@std/async@^1.0.13",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.16",
    "@types/node": "npm:@types/node@^24.0.7",
    "commander": "npm:commander@^14.0.0",
    "debug": "npm:debug@^4.4.1",
    "fast-deep-equal": "npm:fast-deep-equal@^3.1.3",
    "fast-glob": "npm:fast-glob@^3.3.3",
    "glob-to-regexp": "npm:glob-to-regexp@^0.4.1",
    "gpt-tokenizer": "npm:gpt-tokenizer@^3.0.1",
    "ai": "npm:ai@^5.0.0-beta.2",
    "it-pushable": "npm:it-pushable@^3.2.3",
    "p-limit": "npm:p-limit@^6.2.0"
  },
  "nodeModulesDir": "auto"
}
